<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>

        <PackageId>Chickensoft.GodotNodeInterfaces.RxGen</PackageId>
        <Version>1.0.0</Version>
        <Authors>YourName</Authors>
        <Description>Generates AsObservable extensions for GodotNodeInterfaces</Description>
        <PackageTags>godot r3 roslyn rx observable</PackageTags>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.8.0" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <Analyzer Include="$(OutputPath)$(AssemblyName).dll" />
    </ItemGroup>
</Project>